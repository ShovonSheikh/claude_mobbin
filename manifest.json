{
  "manifest_version": 3,
  "name": "Mobbin Vault",
  "version": "3.0.0",
  "description": "Scrape and manage UI design inspiration from Mobbin.com with a beautiful local dashboard.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://mobbin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mobbin Vault"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
